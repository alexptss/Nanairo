import QtQuick @qt_quick_version@
import QtQuick.Controls @qt_quick_controls_version@
import "../SettingBlockItems"

NSettingBlock {
  id: bvh_setting_block

  readonly property int currentBvhIndex: bvh_type_combobox.currentIndex

  labelText: qsTr("Bvh")

  NComboBox {
    id: bvh_type_combobox

    y: bvh_setting_block.labelHeight + @item_offset@
    backgroundColor: bvh_setting_block.color

    model: ["@binaryRadixTreeBvh@",
            "@approximateAgglomerativeClusteringBvh@",
            "@agglomerativeTreeletRestructuringBvh@"]
  }

  function getSceneData() {
    var sceneData = {};
    sceneData["@type@"] = bvh_type_combobox.currentText;
    return sceneData;
  }

  function setSceneData(sceneData) {
    bvh_type_combobox.currentIndex = bvh_type_combobox.find(sceneData["@type@"]);
  }
}
