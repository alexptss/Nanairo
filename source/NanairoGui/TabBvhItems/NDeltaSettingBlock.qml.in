import QtQuick @qt_quick_version@
import QtQuick.Controls @qt_quick_controls_version@
import "../SettingBlockItems"

NSettingBlock {
  id: delta_setting_block_item

  labelText: qsTr("Delta")

  NIntSpinBox {
    id: delta_spinbox

    y: delta_setting_block_item.labelHeight + @item_offset@

    maximumValue: 99
    minimumValue: 1
  }

  function initialize() {
    delta_spinbox.value = 4;
  }

  function getSceneData() {
    var sceneData = {};
    sceneData["@delta@"] = delta_spinbox.value;
    return sceneData;
  }

  function setSceneData(sceneData) {
    delta_spinbox.value = sceneData["@delta@"];
  }
}
