import QtQuick @qt_quick_version@
import QtQuick.Controls @qt_quick_controls_version@
import QtQuick.Controls.Styles @qt_quick_controls_style_version@

TabViewStyle {
  property color backgroundColor

  tab: Rectangle {
    implicitWidth: Math.max(tab_name_label.width + 10, 60)
    implicitHeight: 20
    enabled: styleData.enabled

    color: styleData.selected ? Qt.darker(backgroundColor, @default_darker_scale@)
                              : backgroundColor
    border.color: Qt.darker(color, @default_darker_scale@)

    Label {
      id: tab_name_label
      anchors.centerIn: parent
      text: styleData.title
      verticalAlignment: Text.AlignVCenter
      horizontalAlignment: Text.AlignHCenter
      textFormat: Text.PlainText
    }

    radius: 5.0
  }
  tabOverlap: -8
  tabsAlignment: Qt.AlignHCenter
}
