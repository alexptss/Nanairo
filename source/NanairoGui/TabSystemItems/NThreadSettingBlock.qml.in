import QtQuick @qt_quick_version@
import QtQuick.Controls @qt_quick_controls_version@
import "../SettingBlockItems"

NSettingBlock {
  id: thread_setting_block

  labelText: qsTr("Threading")

  NIntSpinBox {
    id: thread_spinbox

    y: thread_setting_block.labelHeight + @item_offset@

    maximumValue: 128
    minimumValue: 1
  }

  NButton {
    id: thread_auto_button

    y: (thread_spinbox.y + thread_spinbox.height) + @item_offset@
    backgroundColor: thread_setting_block.color

    text: qsTr("Auto")
    onClicked: thread_spinbox.value = nanairoManager.idealThreadCount()
  }

  function getSceneData() {
    var sceneData = {};
    sceneData["@numOfThreads@"] = thread_spinbox.value;
    return sceneData;
  }

  function setSceneData(sceneData) {
    thread_spinbox.value = sceneData["@numOfThreads@"];
  }
}
