import QtQuick @qt_quick_version@
import QtQuick.Controls @qt_quick_controls_version@
import "../SettingBlockItems"

NSettingBlock {
  id: color_space_setting_block 

  labelText: qsTr("ColorSpace")
  
  NComboBox {
    id: color_space_combobox

    y: color_space_setting_block.labelHeight + @item_offset@
    backgroundColor: color_space_setting_block.color

    model: ["@sRgbD65@",
            "@sRgbD50@",
            "@adobeRgbD65@",
            "@adobeRgbD50@"]
  }

  function getSceneData() {
    var sceneData = {};
    sceneData["@colorSpace@"] = color_space_combobox.currentText;
    return sceneData;
  }

  function setSceneData(sceneData) {
    color_space_combobox.currentIndex =
        color_space_combobox.find(sceneData["@colorSpace@"]);
  }
}
