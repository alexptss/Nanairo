import QtQuick @qt_quick_version@
import QtQuick.Controls @qt_quick_controls_version@
import "../SettingBlockItems"

NSettingBlock {
  id: spectra_rgb_setting_block
  
  labelText: qsTr("ColorMode")

  NSwitch {
    id: spectra_rgb_switch

    y: spectra_rgb_setting_block.labelHeight + @item_offset@
    backgroundColor: spectra_rgb_setting_block.color

    falseText: "RGB"
    trueText: "Spectra"
  }

  function getSceneData() {
    var sceneData = {};
    sceneData["@colorMode@"] = spectra_rgb_switch.checked ? "@spectra@"
                                                          : "@rgb@";
    return sceneData;
  }

  function setSceneData(sceneData) {
    var mode = sceneData["@colorMode@"];
    spectra_rgb_switch.checked = (mode == "@spectra@");
  }
}
