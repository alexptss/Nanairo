import QtQuick @qt_quick_version@
import QtQuick.Controls @qt_quick_controls_version@
import "../SettingBlockItems"

NSettingBlock {
  id: standard_observer_setting_block

  labelText: "StandardObserver"

  NComboBox {
    id: standard_observer_combobox

    y: standard_observer_setting_block.labelHeight + @item_offset@
    backgroundColor: standard_observer_setting_block.color

    model: ["@cie2Deg@",
            "@cie10Deg@"]
  }

  function getSceneData() {
    var sceneData = {};
    sceneData["@standardObserver@"] = standard_observer_combobox.currentText;
    return sceneData;
  }

  function setSceneData(sceneData) {
    standard_observer_combobox.currentIndex = 
        standard_observer_combobox.find(sceneData["@standardObserver@"]);
  }
}
